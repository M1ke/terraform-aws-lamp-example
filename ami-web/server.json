{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "eu-west-1",
      "instance_type": "t2.micro",
      "ami_name": "web-{{ isotime \"2006-01-02-15-04\" }}",
      "ssh_username": "ubuntu",
      "ami_block_device_mappings": [
        {
          "delete_on_termination": true,
          "device_name": "/dev/sda1",
          "volume_size": 8,
          "volume_type": "gp2"
        }
      ],
      "encrypt_boot": true,
      "ami_description": "Generated by Packer. Runs an apache server with PHP",
      "enable_t2_unlimited": false,
      "source_ami": "ami-00035f41c82244dab",
      "tags": {
        "Name": "Web server"
      },
      "run_tags": {
        "environment": "build",
        "Name": "Builder: web server"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "ami-web/awslogs.conf",
      "destination": "/tmp/awslogs.conf"
    },
    {
      "type": "file",
      "source": "ami-web/aws.config",
      "destination": "/tmp/aws.config"
    },
    {
      "type": "shell",
      "script": "ami-web/install.sh"
    }
  ]
}
